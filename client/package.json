{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "a simple react boilerplate",
  "main": "/src/app.jsx",
  "scripts": {
    "start": "npm run clean && webpack-dev-server --config ./build-config/webpack.dev.config.js",
    "build": "npm run clean && webpack --config ./build-config/webpack.config.js",
    "deploy": "npm run build && gh-pages -d build",
    "clean": "rm -Rf ./build/bundle.js ./build/index.html",
    "reset": "npm run clean && rm -Rf ./node_modules ./package-lock.json",
    "test": "jest --verbose",
    "confidence-check": "wdio wdio.conf.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@auth0/auth0-react": "^1.1.0",
    "@webpack-cli/init": "^1.0.2",
    "core-js": "^3.1.4",
    "jest": "^26.5.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropdown": "^1.9.0",
    "react-icons": "^3.9.0",
    "react-loading": "^2.0.3",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-sortable-tree-theme-full-node-drag": "^1.1.0",
    "react-split-pane": "^0.1.92",
    "redux": "^4.0.2",
    "redux-thunk": "^2.3.0",
    "selenium-webdriver": "^4.0.0-alpha.7"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@wdio/cli": "^6.7.1",
    "@wdio/local-runner": "^6.7.1",
    "@wdio/mocha-framework": "^6.7.0",
    "@wdio/spec-reporter": "^6.7.0",
    "@wdio/sync": "^6.7.1",
    "axios": "^0.21.0",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chromedriver": "^86.0.0",
    "css-loader": "^3.0.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^3.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "gh-pages": "^2.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^26.5.3",
    "jest-html-reporter": "^3.3.0",
    "mocha": "^8.2.0",
    "node-sass": "^4.12.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.13.1",
    "react-sortable-tree": "^2.8.0",
    "react-test-renderer": "^16.13.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.4",
    "sass-loader": "^7.1.0",
    "selenium-assistant": "^6.1.0",
    "sinon": "^9.2.1",
    "style-loader": "^0.23.1",
    "wdio-chromedriver-service": "^6.0.4",
    "wdio-webpack-dev-server-service": "^2.0.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMocks.js"
    },
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report"
        }
      ]
    ]
  }
}
